{
  "name": "klio-app",
  "version": "1.0.0",
  "description": "Video conference application with React client and Socket.io server and WebRTC!",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "node server/index.js",
    "build": "npm run client:build",
    "heroku-postbuild": "npm run client:install && npm run client:build && npm run server:install",
    "client:install": "cd client && npm ci --only=production",
    "client:build": "cd client && npm run build",
    "client:dev": "cd client && npm start",
    "server:install": "cd server && npm ci --only=production",
    "server:dev": "cd server && npm start"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "video-conference",
    "webrtc",
    "socket.io",
    "react"
  ],
  "author": "Pradeep",
  "license": "ISC"
}
